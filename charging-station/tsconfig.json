{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "noEmitHelpers": false,
    "noEmitOnError": true,
    "noImplicitAny": false,
    "alwaysStrict": true,
    "preserveConstEnums": true,
    "allowUnreachableCode": false,
    "pretty": true,
    "sourceMap": false
  },
  "exclude": [
    "node_modules"
  ]
}